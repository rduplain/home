#!/usr/bin/env bash
# Install Terraform.

TERRAFORM="$REQD_OPT"/terraform/bin/terraform
TERRAFORM_URL=https://releases.hashicorp.com/terraform

check() {
    reqd_ls "$TERRAFORM"
    reqd_run_once
}

install() {
    rm -f "$TERRAFORM"

    qwertyrc > terraform.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc terraform.qwertyrc
    "$TERRAFORM" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$TERRAFORM'" \\
  --sha256=f06ac64c6a14ed6a923d255788e4a5daefa2b50e35f32d7a3b5a2f9a5a91e255 \\
  --output="$TERRAFORM" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv terraform \$DOWNLOAD' \\
  $TERRAFORM_URL/1.0.9/terraform_1.0.9_linux_amd64.zip

# GNU/Linux ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --when="! test -e '$TERRAFORM'" \\
  --sha256=208772e1955c5b0b41bd8c28010c170c77bf09c457840f87e930cdc8116cd149 \\
  --output="$TERRAFORM" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv terraform \$DOWNLOAD' \\
  $TERRAFORM_URL/1.0.9/terraform_1.0.9_linux_arm.zip

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$TERRAFORM'" \\
  --sha256=fb791c3efa323c5f0c2c36d14b9230deb1dc37f096a8159e718e8a9efa49a879 \\
  --output="$TERRAFORM" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv terraform \$DOWNLOAD' \\
  $TERRAFORM_URL/1.0.9/terraform_1.0.9_darwin_amd64.zip
EOF
}

reqd_main "$@"
