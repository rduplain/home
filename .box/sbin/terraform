#!/usr/bin/env bash
# Install Terraform.

TERRAFORM="$REQD_OPT"/terraform/bin/terraform
TERRAFORM_URL=https://releases.hashicorp.com/terraform

check() {
    reqd_ls "$TERRAFORM"
    reqd_run_once
}

install() {
    rm -f "$TERRAFORM"

    qwertyrc > terraform.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc terraform.qwertyrc
    "$TERRAFORM" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$TERRAFORM'" \\
  --sha256=be99da1439a60942b8d23f63eba1ea05ff42160744116e84f46fc24f1a8011b6 \\
  --output="$TERRAFORM" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv terraform \$DOWNLOAD' \\
  $TERRAFORM_URL/0.12.28/terraform_0.12.28_linux_amd64.zip

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --when="! test -e '$TERRAFORM'" \\
  --sha256=ee1835429b681460e0adcc6f873a1d1390264647bae77151ba8211610dc86d83 \\
  --output="$TERRAFORM" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv terraform \$DOWNLOAD' \\
  $TERRAFORM_URL/0.12.28/terraform_0.12.28_linux_arm.zip

# Mac OS X, 64-bit
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$TERRAFORM'" \\
  --sha256=893050bcfc5e7445acd3a30f1500227b989b29cbd958ca64a8233589194a198d \\
  --output="$TERRAFORM" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv terraform \$DOWNLOAD' \\
  $TERRAFORM_URL/0.12.28/terraform_0.12.28_darwin_amd64.zip
EOF
}

reqd_main "$@"
