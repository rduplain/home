#!/usr/bin/env bash
# Install Go (golang).

PREFIX="$REQD_OPT"/go

PACKAGES=""
PACKAGES="$PACKAGES github.com/mikefarah/yq/v3"
PACKAGES="$PACKAGES mvdan.cc/sh/v3/cmd/shfmt"
PACKAGES="$PACKAGES sigs.k8s.io/kind"

check() {
    reqd_ls "$PREFIX"/bin/go
    reqd_run_once
}

install() {
    rm -fr "$PREFIX"

    qwertyrc > go.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc go.qwertyrc

    cd "$REQD_OPT"
    tar -xvzf "$REQD_RES"/go.tar.gz

    "$PREFIX"/bin/go version

    for package in $PACKAGES; do
        GO111MODULE=on "$PREFIX"/bin/go get "$package"
    done
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --output=go.tar.gz \\
  --sha256=3918e6cc85e7eaaa6f859f1bdbaac772e7a825b0eb423c63d3ae68b21f84b844 \\
  https://dl.google.com/go/go1.15.6.linux-amd64.tar.gz

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --output=go.tar.gz \\
  --sha256=40ba9a57764e374195018ef37c38a5fbac9bbce908eab436370631a84bfc5788 \\
  https://dl.google.com/go/go1.15.6.linux-armv6l.tar.gz

# macOS 64-bit
  --sys=darwin --arch=x86_64 \\
  --sha256=940a73b45993a3bae5792cf324140dded34af97c548af4864d22fd6d49f3bd9f \\
  --output=go.tar.gz \\
  https://dl.google.com/go/go1.15.6.darwin-amd64.tar.gz
EOF
}

reqd_main "$@"
