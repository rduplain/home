#!/usr/bin/env bash
# Install Go (golang).

check() {
    reqd_ls "$REQD_OPT"/go/bin/go
    reqd_run_once
}

install() {
    rm -f "$REQD_OPT"/go/bin/go

    qwertyrc > go.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc go.qwertyrc

    cd "$REQD_OPT"
    tar -xvzf "$REQD_RES"/go.tar.gz

    "$REQD_OPT"/go/bin/go version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --output=go.tar.gz \\
  --sha256=aed845e4185a0b2a3c3d5e1d0a35491702c55889192bb9c30e67a3de6849c067 \\
  https://dl.google.com/go/go1.14.4.linux-amd64.tar.gz

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --output=go.tar.gz \\
  --sha256=e20211425b3f797ca6cd5e9a99ab6d5eaf1b009d08d19fc8a7835544fa58c703 \\
  https://dl.google.com/go/go1.14.4.linux-armv6l.tar.gz

# Mac OS X, 64-bit
  --sys=darwin --arch=x86_64 \\
  --sha256=3fa7ed8dc44fdd50c0bfe72676250cceca527d59950aef20af906a670cf88de2 \\
  --output=go.tar.gz \\
  https://dl.google.com/go/go1.14.4.darwin-amd64.tar.gz
EOF
}

reqd_main "$@"
