#!/usr/bin/env bash
# Install Go (golang).

PREFIX="$REQD_OPT"/go

PACKAGES=""
PACKAGES="$PACKAGES github.com/mikefarah/yq/v3"
PACKAGES="$PACKAGES mvdan.cc/sh/v3/cmd/shfmt"
PACKAGES="$PACKAGES sigs.k8s.io/kind"

check() {
    reqd_ls "$PREFIX"/bin/go
    reqd_run_once
}

install() {
    rm -fr "$PREFIX"

    qwertyrc > go.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc go.qwertyrc

    cd "$REQD_OPT"
    tar -xvzf "$REQD_RES"/go.tar.gz

    "$PREFIX"/bin/go version

    for package in $PACKAGES; do
        GO111MODULE=on "$PREFIX"/bin/go get "$package"
    done
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --output=go.tar.gz \\
  --sha256=013a489ebb3e24ef3d915abe5b94c3286c070dfe0818d5bca8108f1d6e8440d2 \\
  https://dl.google.com/go/go1.16.linux-amd64.tar.gz

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --output=go.tar.gz \\
  --sha256=d1d9404b1dbd77afa2bdc70934e10fbfcf7d785c372efc29462bb7d83d0a32fd \\
  https://dl.google.com/go/go1.16.linux-armv6l.tar.gz

# macOS 64-bit
  --sys=darwin --arch=x86_64 \\
  --sha256=6000a9522975d116bf76044967d7e69e04e982e9625330d9a539a8b45395f9a8 \\
  --output=go.tar.gz \\
  https://dl.google.com/go/go1.16.darwin-amd64.tar.gz
EOF
}

reqd_main "$@"
