#!/usr/bin/env bash
# Install `sbt` for Scala.

SBT_URL=https://sbt-downloads.cdnedge.bluemix.net/releases/v1.3.8/sbt-1.3.8.tgz
SBT_SHA256=27b2ed49758011fefc1bd05e1f4156544d60673e082277186fdd33b6f55d995d

check() {
    reqd_ls "$REQD_OPT"/sbt/bin/sbt
    reqd_run_once
}

install() {
    rm -fr "$REQD_OPT"/sbt

    eval "$QWERTY_SH" --output=sbt.tar.gz --sha256="$SBT_SHA256" "$SBT_URL"

    cd "$REQD_OPT"
    tar -xvzf "$REQD_RES"/sbt.tar.gz

    "$REQD_OPT"/sbt/bin/sbt --version
}

reqd_main "$@"
