#!/usr/bin/env bash
# Install Pulumi.

PULUMI="$REQD_OPT"/pulumi/bin/pulumi
PULUMI_URL=https://github.com/pulumi/pulumi

check() {
    reqd_ls "$PULUMI"
    reqd_run_once
}

install() {
    rm -fr "$REQD_OPT"/pulumi

    qwertyrc > pulumi.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc pulumi.qwertyrc

    cd "$REQD_OPT"
    mkdir -p pulumi
    cd pulumi
    tar -xvzf "$REQD_RES"/pulumi.tar.gz
    mv pulumi bin

    "$PULUMI" version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --sha256=651f1b77919f791db35ad81037250d63e307fd2ba33fecd5fbe5d19da86fbd75 \\
  --output=pulumi.tar.gz \\
  $PULUMI_URL/releases/download/v3.13.2/pulumi-v3.13.2-linux-x64.tar.gz

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --sha256=ea89fa255644a7ddf34d9781105c0f3346ea47a43ec40a157f9fd1090cde0542 \\
  --output=pulumi.tar.gz \\
  $PULUMI_URL/releases/download/v3.13.2/pulumi-v3.13.2-darwin-x64.tar.gz
EOF
}

reqd_main "$@"
