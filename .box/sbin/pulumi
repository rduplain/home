#!/usr/bin/env bash
# Install Pulumi.

PULUMI="$REQD_OPT"/pulumi/bin/pulumi
PULUMI_URL=https://github.com/pulumi/pulumi

check() {
    reqd_ls "$PULUMI"
    reqd_run_once
}

install() {
    rm -fr "$REQD_OPT"/pulumi

    qwertyrc > pulumi.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc pulumi.qwertyrc

    cd "$REQD_OPT"
    mkdir -p pulumi
    cd pulumi
    tar -xvzf "$REQD_RES"/pulumi.tar.gz
    mv pulumi bin

    "$PULUMI" version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --sha256=eeb37dbd25378707521d19a322e4b907c6dc20d3fb08827bb02ec30e0e4f74d6 \\
  --output=pulumi.tar.gz \\
  $PULUMI_URL/releases/download/v3.11.0/pulumi-v3.11.0-linux-x64.tar.gz

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --sha256=ba3a4ba9a8b79d4927c5c0c18ceac98ba8a9aa1f8d874d64b6be673deba97392 \\
  --output=pulumi.tar.gz \\
  $PULUMI_URL/releases/download/v3.11.0/pulumi-v3.11.0-darwin-x64.tar.gz
EOF
}

reqd_main "$@"
