#!/usr/bin/env bash
# Install Pulumi.

PULUMI_URL=https://get.pulumi.com/releases/sdk/pulumi-v2.15.6-linux-x64.tar.gz
PULUMI_SHA256=24dd1f9672e33b6e7e6c72392dd85c81196af3ab2458044dce133bc885e351b3

check() {
    reqd_ls "$REQD_OPT"/pulumi/bin/pulumi
    reqd_run_once
}

install() {
    rm -fr "$REQD_OPT"/pulumi

    eval "$QWERTY_SH" \
         --sys=linux --arch=x86_64 \
         --output=pulumi.tar.gz --sha256="$PULUMI_SHA256" "$PULUMI_URL"

    cd "$REQD_OPT"
    mkdir -p pulumi
    cd pulumi
    tar -xvzf "$REQD_RES"/pulumi.tar.gz
    mv pulumi bin

    "$REQD_OPT"/pulumi/bin/pulumi version
}

reqd_main "$@"
