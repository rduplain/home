#!/usr/bin/env bash
# Install Pulumi.

PULUMI="$REQD_OPT"/pulumi/bin/pulumi
PULUMI_URL=https://github.com/pulumi/pulumi

check() {
    reqd_ls "$PULUMI"
    reqd_run_once
}

install() {
    rm -fr "$REQD_OPT"/pulumi

    qwertyrc > pulumi.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc pulumi.qwertyrc

    cd "$REQD_OPT"
    mkdir -p pulumi
    cd pulumi
    tar -xvzf "$REQD_RES"/pulumi.tar.gz
    mv pulumi bin

    "$PULUMI" version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --sha256=43156e5062f680d3ad9b1df3f3ab053b6895fc648c22a5a14773be9c5d9e57ff \\
  --output=pulumi.tar.gz \\
  $PULUMI_URL/releases/download/v2.21.2/pulumi-v2.21.2-linux-x64.tar.gz

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --sha256=4b903a6105d39b32a3d67d773676689d84181e8f02cce3b2b055da08696f3272 \\
  --output=pulumi.tar.gz \\
  $PULUMI_URL/releases/download/v2.21.2/pulumi-v2.21.2-darwin-x64.tar.gz
EOF
}

reqd_main "$@"
