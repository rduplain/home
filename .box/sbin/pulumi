#!/usr/bin/env bash
# Install Pulumi.

PULUMI_URL=https://github.com/pulumi/pulumi/releases/download/v2.21.2/pulumi-v2.21.2-linux-x64.tar.gz
PULUMI_SHA256=43156e5062f680d3ad9b1df3f3ab053b6895fc648c22a5a14773be9c5d9e57ff

check() {
    reqd_ls "$REQD_OPT"/pulumi/bin/pulumi
    reqd_run_once
}

install() {
    rm -fr "$REQD_OPT"/pulumi

    eval "$QWERTY_SH" \
         --sys=linux --arch=x86_64 \
         --output=pulumi.tar.gz --sha256="$PULUMI_SHA256" "$PULUMI_URL"

    cd "$REQD_OPT"
    mkdir -p pulumi
    cd pulumi
    tar -xvzf "$REQD_RES"/pulumi.tar.gz
    mv pulumi bin

    "$REQD_OPT"/pulumi/bin/pulumi version
}

reqd_main "$@"
