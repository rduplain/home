#!/usr/bin/env bash
# Install Waypoint.

WAYPOINT="$REQD_OPT"/waypoint/bin/waypoint
WAYPOINT_URL=https://releases.hashicorp.com/waypoint

check() {
    reqd_ls "$WAYPOINT"
    reqd_run_once
}

install() {
    rm -f "$WAYPOINT"

    qwertyrc > waypoint.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc waypoint.qwertyrc
    "$WAYPOINT" version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$WAYPOINT'" \\
  --sha256=93d242e424c98ddcdfc1994057c043ecc756d0e49dd8c0e7d160cb511f9c741a \\
  --output="$WAYPOINT" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv waypoint \$DOWNLOAD' \\
  $WAYPOINT_URL/0.2.3/waypoint_0.2.3_linux_amd64.zip

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --when="! test -e '$WAYPOINT'" \\
  --sha256=26cfd509f9df444890622e03d37fd499b5d6f9d202fd3657d38efd74a28900c6 \\
  --output="$WAYPOINT" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv waypoint \$DOWNLOAD' \\
  $WAYPOINT_URL/0.2.3/waypoint_0.2.3_linux_arm.zip

# macOS 64-bit
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$WAYPOINT'" \\
  --sha256=1a61ce508ed8d234ea32dae5a8a6fb97147db205921e76880fc3be1ee4762358 \\
  --output="$WAYPOINT" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv waypoint \$DOWNLOAD' \\
  $WAYPOINT_URL/0.2.3/waypoint_0.2.3_darwin_amd64.zip
EOF
}

reqd_main "$@"
