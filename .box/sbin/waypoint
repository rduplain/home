#!/usr/bin/env bash
# Install Waypoint.

WAYPOINT="$REQD_OPT"/waypoint/bin/waypoint
WAYPOINT_URL=https://releases.hashicorp.com/waypoint

check() {
    reqd_ls "$WAYPOINT"
    reqd_run_once
}

install() {
    rm -f "$WAYPOINT"

    qwertyrc > waypoint.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc waypoint.qwertyrc
    "$WAYPOINT" version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$WAYPOINT'" \\
  --sha256=80fa965a4c9f0c7b4e8fffa255a1823ff8df350523b336433debb17d79ad8d6d \\
  --output="$WAYPOINT" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv waypoint \$DOWNLOAD' \\
  $WAYPOINT_URL/0.3.0/waypoint_0.3.0_linux_amd64.zip

# GNU/Linux ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --when="! test -e '$WAYPOINT'" \\
  --sha256=010f75266d99f164dc33c087aa71612d638f2ef15d389c6d1d854657dab30816 \\
  --output="$WAYPOINT" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv waypoint \$DOWNLOAD' \\
  $WAYPOINT_URL/0.3.0/waypoint_0.3.0_linux_arm.zip

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$WAYPOINT'" \\
  --sha256=f8d245d1ef7cd3e6d4d8c03e3a8e863e6a8162648ef946a8834afb92d9651436 \\
  --output="$WAYPOINT" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv waypoint \$DOWNLOAD' \\
  $WAYPOINT_URL/0.3.0/waypoint_0.3.0_darwin_amd64.zip
EOF
}

reqd_main "$@"
