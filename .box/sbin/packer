#!/usr/bin/env bash
# Install Packer.

PACKER="$REQD_OPT"/packer/bin/packer
PACKER_URL=https://releases.hashicorp.com/packer

check() {
    reqd_ls "$PACKER"
    reqd_run_once
}

install() {
    rm -f "$PACKER"

    qwertyrc > packer.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc packer.qwertyrc
    "$PACKER" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$PACKER'" \\
  --sha256=294ae56dccec9da24120b92c22e4c4d0453f1a9d077799611ead2adacceade3e \\
  --output="$PACKER" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv packer \$DOWNLOAD' \\
  $PACKER_URL/1.6.3/packer_1.6.3_linux_amd64.zip

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --when="! test -e '$PACKER'" \\
  --sha256=75fee256327079418ba386a9f47db56c28e4fe5a1f7b7836a369b4c09bd65121 \\
  --output="$PACKER" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv packer \$DOWNLOAD' \\
  $PACKER_URL/1.6.3/packer_1.6.3_linux_arm.zip

# Mac OS X, 64-bit
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$PACKER'" \\
  --sha256=dc476dcc49a36ee8fdd6ed8a5fdd48147b17fdf6f3d69db2d616e19b15915b73 \\
  --output="$PACKER" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv packer \$DOWNLOAD' \\
  $PACKER_URL/1.6.3/packer_1.6.3_darwin_amd64.zip
EOF
}

reqd_main "$@"
