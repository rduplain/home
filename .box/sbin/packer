#!/usr/bin/env bash
# Install Packer.

PACKER="$REQD_OPT"/packer/bin/packer
PACKER_URL=https://releases.hashicorp.com/packer

check() {
    reqd_ls "$PACKER"
    reqd_run_once
}

install() {
    rm -f "$PACKER"

    qwertyrc > packer.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc packer.qwertyrc
    "$PACKER" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux 64-bit
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$PACKER'" \\
  --sha256=8dcf97610e8c3907c23e25201dce20b498e1939e89878dec01de6975733c7729 \\
  --output="$PACKER" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv packer \$DOWNLOAD' \\
  $PACKER_URL/1.6.1/packer_1.6.1_linux_amd64.zip

# GNU/Linux on ARM
  --sys=linux --arch=arm --all-sub-arch \\
  --when="! test -e '$PACKER'" \\
  --sha256=414e10ab3d47e31b4d9f1ce988d809aca5d3be08deaa9c588b0f5377a49fba23 \\
  --output="$PACKER" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv packer \$DOWNLOAD' \\
  $PACKER_URL/1.6.1/packer_1.6.1_linux_arm.zip

# Mac OS X, 64-bit
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$PACKER'" \\
  --sha256=668cf8b798c5dbbdb04ced053dbb33ea76a5d6a4de955e7ce39a52fe2a758d10 \\
  --output="$PACKER" --chmod=755 \\
  --on-download='unzip \$DOWNLOAD && mv packer \$DOWNLOAD' \\
  $PACKER_URL/1.6.1/packer_1.6.1_darwin_amd64.zip
EOF
}

reqd_main "$@"
