#!/usr/bin/env bash
# Install `bb`: A Clojure babushka for the grey areas of Bash.

BB="$REQD_OPT"/babashka/bin/bb
BB_URL=https://github.com/borkdude/babashka/releases


check() {
    reqd_ls "$BB"
    reqd_run_once
}

install() {
    rm -f "$BB"

    qwertyrc > bb.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc bb.qwertyrc
    "$BB" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$BB'" \\
  --sha256=e4526675b54fd53b577ba3f9d0d040f80b0b6b119ed75648beff4eca6987b4db \\
  --output="$BB" --chmod=755 \\
  --on-download='tar -xf \$DOWNLOAD && mv bb \$DOWNLOAD' \\
  $BB_URL/download/v0.5.1/babashka-0.5.1-linux-amd64-static.tar.gz

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$BB'" \\
  --sha256=d799bdaf242e0c0169154643e506d17fc1a8d062e2885f3d60425decb547a8be \\
  --output="$BB" --chmod=755 \\
  --on-download='tar -xf \$DOWNLOAD && mv bb \$DOWNLOAD' \\
  $BB_URL/download/v0.5.1/babashka-0.5.1-macos-amd64.tar.gz
EOF
}

reqd_main "$@"
