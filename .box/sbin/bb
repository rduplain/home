#!/usr/bin/env bash
# Install `bb`: A Clojure babushka for the grey areas of Bash.

BB="$REQD_OPT"/babashka/bin/bb
BB_URL=https://github.com/borkdude/babashka/releases


check() {
    reqd_ls "$BB"
    reqd_run_once
}

install() {
    rm -f "$BB"

    qwertyrc > bb.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc bb.qwertyrc
    "$BB" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$BB'" \\
  --sha256=1424bfd6f947dd3086ffa065197d531bda779ef7daf1a7f4790ed8be85ac4293 \\
  --output="$BB" --chmod=755 \\
  --on-download='tar -xf \$DOWNLOAD && mv bb \$DOWNLOAD' \\
  $BB_URL/download/v0.4.0/babashka-0.4.0-linux-amd64-static.tar.gz

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$BB'" \\
  --sha256=36303b55f980226587110919327a295b3c8bf13962e8b941a9d31b26bbc93d58 \\
  --output="$BB" --chmod=755 \\
  --on-download='tar -xf \$DOWNLOAD && mv bb \$DOWNLOAD' \\
  $BB_URL/download/v0.4.0/babashka-0.4.0-macos-amd64.tar.gz
EOF
}

reqd_main "$@"
