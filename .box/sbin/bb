#!/usr/bin/env bash
# Install `bb`: A Clojure babushka for the grey areas of Bash.

BB="$REQD_OPT"/babashka/bin/bb
BB_URL=https://github.com/borkdude/babashka/releases


check() {
    reqd_ls "$BB"
    reqd_run_once
}

install() {
    rm -f "$BB"

    qwertyrc > bb.qwertyrc
    "$REQD_BIN"/qwerty.sh --rc bb.qwertyrc
    "$BB" --version
}

qwertyrc() {
    cat - <<EOF
# GNU/Linux x86_64
  --sys=linux --arch=x86_64 \\
  --when="! test -e '$BB'" \\
  --sha256=75b31176f0f69207bbebcfce8d0c42e2f3f6ac7d8822fd9db0615a63c5a68c41 \\
  --output="$BB" --chmod=755 \\
  --on-download='tar -xf \$DOWNLOAD && mv bb \$DOWNLOAD' \\
  $BB_URL/download/v0.6.0/babashka-0.6.0-linux-amd64-static.tar.gz

# macOS x86_64
  --sys=darwin --arch=x86_64 \\
  --when="! test -e '$BB'" \\
  --sha256=acb767ad8e693e875fccbd5206103e4541ddd67ea371c3164f5e562b9231ee50 \\
  --output="$BB" --chmod=755 \\
  --on-download='tar -xf \$DOWNLOAD && mv bb \$DOWNLOAD' \\
  $BB_URL/download/v0.6.0/babashka-0.6.0-macos-amd64.tar.gz
EOF
}

reqd_main "$@"
