#!/bin/bash
# Wrap `tig` to use .homegit.

use_homegit() {
    [ -n "$USE_HOMEGIT" ] || [ -d .homegit ] && ! [ -d .git ]
}

main() {
    DIR="$( cd -P "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
    . "$DIR"/wrapper.bash

    tig="$(set_aside_this_and_find_that "$DIR" tig)"

    if [ -z "$tig" ]; then
        # No other `tig` found.
        return 2
    fi

    if use_homegit; then
        export GIT_DIR=$HOME/.homegit
        exec "$tig" "$@"
    else
        exec "$tig" "$@"
    fi
}

main "$@"
