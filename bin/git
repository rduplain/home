#!/bin/bash
# Wrap `git` to use .homegit.

use_homegit() {
    [ -n "$USE_HOMEGIT" ] || [ -d .homegit ] && ! [ -d .git ]
}

main() {
    DIR="$( cd -P "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
    . "$DIR"/wrapper.bash

    git="$(set_aside_this_and_find_that "$DIR" git)"

    if [ -z "$git" ]; then
        # No other `git` found.
        return 2
    fi

    if use_homegit; then
        homegit="$git --git-dir=$HOME/.homegit --work-tree=$HOME"

        if [ "$1" = "sync" ]; then
            $homegit fetch &&
                $homegit rebase --committer-date-is-author-date origin/master
        else
            exec $homegit "$@";
        fi

    else
        exec "$git" "$@"
    fi
}

main "$@"
