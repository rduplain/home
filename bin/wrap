#!/bin/bash
# I was looking for a way to have screen run program at start then run a shell.

# Assume $SHELL is /bin/bash.
. "$HOME"/.bashrc

if [ "$1" = "-C" ]; then
   cd $2
   shift 2
fi

eval "$PROMPT_COMMAND"

# run the requested command
eval "$@"

# HACK: Put command in history before executing shell. `history -s "$@"`
# together with `history -a` serves this purpose, but does not appear to be as
# reliable as a direct echo appending the result.
[[ -n "$@" ]] && echo "$@" >> "$HOME"/.bash_history

# now launch shell
exec /bin/bash
