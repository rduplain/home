#!/bin/bash -li

conf="$HOME"/.screens
screen="$HOME/bin/screen -s -/bin/bash"

screen_running() {
    screen -ls | grep -q "\.$1\s";
}

start_screen() {
    local path="$1"
    shift

    if [ ! -e "$path" ]; then
        echo "screens: path does not exist: $path" >&2
        return 1
    fi

    path=$(cd $path; pwd)

    name=${path##*/}
    [[ -z "$name" ]] && name=${path##*/} # Handle trailing slash.

    if ! screen_running "$name"; then
        pushd $path > /dev/null &&
            echo "starting screen in $path" &&
            $screen -fn -dmS $name
        popd > /dev/null
    else
        echo "screen is already running for '$name'"
    fi
}

if [ $# -gt 0 ]; then
    for path in "$@"; do
        start_screen "$path"
    done
else
    for path in `cat $conf`; do
        start_screen "$path"
    done
fi
